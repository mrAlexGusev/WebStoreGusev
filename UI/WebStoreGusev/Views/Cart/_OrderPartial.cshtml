@model OrderViewModel

<form method="post" asp-antiforgery="true" asp-action="CheckOut">
    <div class="row">
        <div class="col-sm-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="sr-only"></label>
                <input asp-for="Name" class="form-control" placeholder="@nameof(@Model.Name)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Phone" class="sr-only"></label>
                <input asp-for="Phone" class="form-control" placeholder="@nameof(@Model.Phone)" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
     
            <div class="form-group">
                <label asp-for="Address" class="sr-only"></label>
                <input asp-for="Address" class="form-control" placeholder="@nameof(@Model.Address)" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6">

            @{
                ViewData.TryGetValue("sumCart", out var sumObj);
            }

            @if (sumObj as decimal? > 0)
            {
                var sum = (decimal)sumObj;

                <div class="total_area">
                    <ul>
                        <li>Налог: <span>0</span></li>
                        <li>Доставка: <span>Бесплатно</span></li>
                        <li>Итого: <span>@sum.ToString("C")</span></li>
                    </ul>
                    <input type="submit" value="Оформить" class="btn btn-default check_out" />
                </div>
            }
        </div>    
    </div>
</form>
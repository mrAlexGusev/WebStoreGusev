@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Сотрудники";
    var isAdmin = User.IsInRole("Admins");
}

<div class="container">
    <h3>@ViewData["Title"]</h3>

    @if (isAdmin)
    {
        <a asp-action="Edit" class="btn btn-success">Добавить через Edit</a>
        <a asp-action="Create" class="btn btn-success">Добавить через Create</a>
    }

    <hr />

    <table class="table table-bordered" id="employees-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>Должность</th>
                <th></th>
                @if (isAdmin)
                {
                    <th></th>
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.Patronymic</td>
                <td>@item.Age</td>
                <td>@item.Position</td>
                <td>
                    @*html-helper*@
                    @*@Html.ActionLink("Детали", "Details", new { id = item.Id })*@

                    @*tag-helper*@
                    <a asp-action="Details" asp-route-id="@item.Id">Карточка</a>
                </td>
                @if (isAdmin)
                {
                    <td><a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a></td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>